<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="moodgenre.spotify.com.moodgenre.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/textView1" />

    <Button
        android:text="Toggle Spotify Auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="49dp"
        android:id="@+id/button_toggle_spotify_auth" />

    <Button
        android:text="Choose Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_toggle_spotify_auth"
        android:layout_alignLeft="@+id/button_toggle_spotify_auth"
        android:layout_alignStart="@+id/button_toggle_spotify_auth"
        android:layout_marginTop="27dp"
        android:id="@+id/button_choose_image" />

    <Button
        android:text="Play/Pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_play_pause"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/button_choose_image"
        android:layout_alignStart="@+id/button_choose_image" />


</RelativeLayout>
